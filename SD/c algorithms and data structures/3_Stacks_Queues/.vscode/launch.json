{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) main",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "program": "${workspaceFolder}/mystack_exec",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "run make",
        },
        {
            "name": "(gdb) calc",
